fastlane_version "1.109.0"

# This value helps us track success metrics for Fastfiles
# we automatically generate. Feel free to remove this line
# once you get things running smoothly!
generated_fastfile_id "612c5898-e580-45c0-9e4d-9dace4a242b3"

before_all do
	sh "../prepare_test.sh"
end

platform :ios do
	lane :test do
		scan(
			scheme: "AlgoliaSearch iOS",
			configuration: "Release",
			clean: true
		)
	end
end

platform :mac do
	lane :test do
		scan(
			scheme: "AlgoliaSearch OSX",
			configuration: "Release",
			clean: true
		)
	end
end

platform :tv do
	lane :test do
		scan(
			scheme: "AlgoliaSearch tvOS",
			configuration: "Release",
			clean: true
		)
	end
end

platform :watch do
	lane :test do
		scan(
			scheme: "AlgoliaSearch watchOS",
			configuration: "Release",
			clean: true
		)
	end
end

desc "Available options: type:major|minor|patch"
lane :deploy do |options|
	prepare_git('master')
	increment_version_number(
  		bump_type: options[:type]
	)
	new_build_number = version_bump_podspec(
		bump_type: options[:type],
		path: "AlgoliaSearch-Client-Swift.podspec"
	)
	#puts changelog_from_git_commits
	git_commit(
		path: ["AlgoliaSearch-Client-Swift.podspec", "Source/Info.plist" ,"Tests/Info.plist"], 
		message: "Version #{new_build_number} deploy"
	)
	add_git_tag(
		build_number: new_build_number,
		tag: new_build_number
	)
	push_to_git_remote(remote: "origin")
	pod_push(
		path: "AlgoliaSearch-Client-Swift.podspec"
	)
end

def prepare_git(branch)
	ensure_git_status_clean
	ensure_git_branch(branch:branch)
	git_pull
end

after_all do
  sh "../cleanup_test.sh"
  #slack
end
